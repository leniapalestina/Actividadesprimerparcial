print("¿Cual es el precio unitario del aluminio?")
a=input()
a=int(a)
print("¿Cuantos aluminios se necesitan?")
ca=input()
ca=int(ca)
print("¿Cual es el precio unitario de los conectores?")
c=input()
c=int(c)
print("¿Cuantos conectores se necesitan?")
cc=input()
cc=int(cc)
print("¿Cual es el precio unitario de las cajas?")
j=input()
j=int(j)
print("¿Cuantas cajas se necesitan?")
cj=input()
cj=int(cj)
t=(a*ca)+(c*cc)+(j*cj)
print("El costo total del proyecto basado en la cantidad de componentes es:",t)
ct=(t*5)/100
print("Si aplicamos el descuento del 5% a las empresas el monto que descontamos sería:",ct)
T=t-ct 
print("Por lo que el costo total es;",T)
